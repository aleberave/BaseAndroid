<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset_purple_sky_beach_sand_footprints_shore_water"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/gridlayout_background"
        android:backgroundTint="@color/gridlayout_background_tint"
        android:columnCount="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:fontFamily="@font/curlz"
            android:gravity="end"
            android:hint="@string/zero"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/textview_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/one"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/two"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/three"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/four"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/five"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/six"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/seven"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/eight"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/nine"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/zero"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/plus"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/minus"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/multiply"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/divide"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/dot"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:backgroundTint="@color/button_background_tint"
            android:fontFamily="@font/curlz"
            android:text="@string/equal"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />
    </GridLayout>

</LinearLayout>