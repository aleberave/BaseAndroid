<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#3700BCD4"
    android:orientation="vertical"
    tools:context=".hw1.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:accessibilityLiveRegion="polite"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/curlz"
                android:text="@string/nameApp"
                android:textColor="#FA5BAA"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="@font/curlz"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="@string/blue"
                android:textAllCaps="true"
                android:textColor="#35B0E8"
                tools:ignore="Autofill,LabelFor" />

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/curlz"
                android:text="@string/button"
                android:textColor="#0183EA" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/curlz"
                android:outlineAmbientShadowColor="@color/purple_700"
                android:text="@string/switch1"
                android:textColor="#3CB2C1"
                tools:ignore="UnusedAttribute,UseSwitchCompatOrMaterialXml" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/curlz"
                android:outlineSpotShadowColor="@color/purple_500"
                android:text="CheckBox"
                android:textColor="#220E4E"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/curlz"
                android:textColor="#DA618A"
                android:textStyle="bold"
                android:text="@string/togglebutton" />

            <include layout="@layout/activity_second" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>